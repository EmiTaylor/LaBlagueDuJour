{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1>Blagues list</h1>
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Panel title</h3>
      </div>
      <div class="panel-body">


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Texte</th>
                <th>Categorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blague in blagues %}
            <tr>
                <td><a href="{{ path('blague_show', { 'id': blague.id }) }}">{{ blague.id }}</a></td>
                <td>{{ blague.texte }}</td>
                <td>{{ blague.categorie }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('blague_show', { 'id': blague.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('blague_edit', { 'id': blague.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
   </div>
    <ul>
        <li>
            <a href="{{ path('blague_new') }}">Create a new blague</a>
        </li>
    </ul>
</div>
{% endblock %}
